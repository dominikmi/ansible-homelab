{
    "bootstrap_expect": 1,
    "client_addr": "0.0.0.0",
    "datacenter": "nukelab",
    "data_dir": "/var/devops/consul",
    "domain": "consul",
    "enable_script_checks": true,
    "dns_config": {
        "enable_truncate": true,
        "only_passing": true
    },
    "ports": {
        "http": 8500,
        "https": 8501
    },
    "enable_syslog": true,
    "encrypt": "{{ consul_encrypt }}",
    "leave_on_terminate": true,
    "log_level": "INFO",
    "rejoin_after_leave": true,
    "server": true,
    "start_join": [
        "{{ consul_server }}"
    ],
    "ui_config": {
	    "enabled":true
    },
    "verify_incoming": true,
    "verify_outgoing": true,
    "verify_server_hostname": true,
    "ca_file": "/etc/pki/ca-trust/source/anchors/intermediate_ca.pem",
    "cert_file": "/etc/pki/tls/certs/{{ ansible_hostname }}-peer.pem",
    "key_file": "/etc/pki/tls/private/{{ ansible_hostname }}-peer-key.pem",
    "auto_encrypt": {
            "allow_tls": true
    }

}
